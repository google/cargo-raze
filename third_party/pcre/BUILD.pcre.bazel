"""pcre is only expected to be used on Linux systems"""

load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "all",
    srcs = glob(["**"]),
)

cmake(
    name = "pcre",
    cache_entries = {
        "CMAKE_C_FLAGS": "-fPIC -D_GNU_SOURCE=1",
    },
    lib_source = ":all",
    out_static_libs = ["libpcre.a"],
    visibility = ["//visibility:public"],
)
